<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textSize="25sp"
        android:text="cities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trip_cities_textView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="10dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trip_date_to_textView"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/trip_date_from_textView"/>

        <TextView
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:text="date from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trip_date_from_textView"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:paddingEnd="10dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:text="@string/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/trip_price_textView"/>

        <TextView
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:text="20"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trip_price_textView"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>
